@using SSNET_DataModel.Models
@model Usuarios

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">    <link rel="stylesheet" href="~/css/main.css" />
</head>
<body>
    <div class="background-login">
        @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-horizontal form-material login justify-content-center", role = "form", id = "loginform" }))
        {
            <img src="~/images/login-logo.png" />
            if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
            {
                <div class="alert alert-warning alert-dismissible fade show">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    @Html.ValidationSummary(true, "Errores: ", new { @class = "text-danger" })
                </div>
            }
            <div class="container">
                <div class="col-12">
                    @Html.EditorFor(m => m.Username, new { htmlAttributes = new { placeholder = "Usuario" } })
                </div>

                <div class="col-12">
                    @Html.PasswordFor(m => m.Password, new { @placeholder = "Password" })
                </div>

                <div class="col-12">
                    <label class="forgot-password">¿Has olvidado tu contraseña?</label>
                </div>
            </div>
            <button class="btn btn-login" onclick="window.location.href = '@Url.Action("RestorePassword", "Login")'" type="submit">Login</button>
        }
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>